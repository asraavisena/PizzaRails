<p id="notice"><%= notice %></p>

<%= link_to "Home", welcome_index_path%>
<h1>Menuitems</h1>

<table>
  <thead>
    <tr>
      <th>Menuitemid</th>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menuitems.each do |menuitem| %>
      <tr>
        <td><%= menuitem.menuitemID %></td>
        <td><%= menuitem.name %></td>
        <td><%= menuitem.price %></td>
        <td><%= menuitem.description %></td>
        <td><%= link_to 'Show', menuitem %></td>
        <%# sementara hapus edit dan destroy dulu %>
        <% if user_signed_in?%>
         <td><%= link_to 'Edit', edit_menuitem_path(menuitem) %></td> 
         <td><%= link_to 'Destroy', menuitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

